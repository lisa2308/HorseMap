<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/horse_details_header"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/horse"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/horse_details_header" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/horse_details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/horse_details_header"
        android:layout_marginBottom="-28dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_doctor"
        app:backgroundTint="@color/colorWhite"
        android:tint="@color/colorPrimaryDark"/>

    <RelativeLayout
        android:id="@+id/horse_details_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/horse_details_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Le Zinc"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

</RelativeLayout>

</RelativeLayout>